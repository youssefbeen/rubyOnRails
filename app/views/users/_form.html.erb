
<%= render 'share/errors', obj: @user %>


<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <%= form_for(@user, :html=> {class:"form-horizontal", role: "form"}) do |f| %>

        <div class=form-group>
            <%= f.label :username , class:'control-label col-sm-2'%>
            <div class='col-sm-10'>
                <%= f.text_field :username, class: "form-control", placeholder: "Username", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :email, class: "control-label col-sm-2" %>
            <div class="col-sm-10">
                <%= f.email_field :email ,class: "form-control", rows: 10, placeholder: "Email" %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :password, class: "control-label col-sm-2" %>
            <div class="col-sm-10">
                <%= f.password_field :password ,class: "form-control", rows: 10, placeholder: "Password" %>
            </div>
        </div>
           <div class="form-group">
            <%= f.label :password, class: "control-label col-sm-2" %>
            <div class="col-sm-10">
                <%= f.password_field :password_confirmation ,class: "form-control", rows: 10, placeholder: "Password Confirmation" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10" >
                <%= f.submit(@user.new_record? ? "Sign Up" : "Update account", class: "btn btn-success") %>
            
<!--                <%= link_to "Cancel and return to list", articles_path, class: "btn btn-primary"%>-->
            </div>
        </div>

        <% end %>
    </div>
</div>
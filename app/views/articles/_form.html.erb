
<%= render 'share/errors', obj: @article %>


<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <%= form_for(@article, :html=> {class:"form-horizontal", role: "form"}) do |f| %>

        <div class=form-group>
            <%= f.label :title , class:'control-label col-sm-2'%>
            <div class='col-sm-10'>
                <%= f.text_field :title, class: "form-control", placeholder: "Title Of Article", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :description, class: "control-label col-sm-2" %>
            <div class="col-sm-10">
                <%= f.text_area :description ,class: "form-control", rows: 10, placeholder: "Body Of Article" %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10" >
                <%= f.submit class: "btn btn-success" %>
            
                <%= link_to "Cancel and return to list", articles_path, class: "btn btn-primary"%>
            </div>
        </div>

        <% end %>
    </div>
</div>
<h1>Listing all articles</h1>

<%= link_to 'Create new article', new_article_path%>

<table class="table table-striped">
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Created by</th>
        <th>last updated</th>
    </tr>
    <% @articles.each do |a|%>
    <tr>
        <td><%=a.title%></td>
        <td><%=a.description%></td>
        <td><%= a.user.username if a.user%></td>
        <td> <%= time_ago_in_words(a.updated_at)%></td>
        <td><%= link_to "edit", edit_article_path(a)%></td>
        <td><%=link_to "Delete", article_path(a), method: :delete, data: {confirm: 'Are u sure?'}%></td>
    </tr>
    <%end%>
</table>
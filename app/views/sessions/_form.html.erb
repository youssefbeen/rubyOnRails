



<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <%= form_for(:session , :html=> {class:"form-horizontal", role: "form"}, url: login_path) do |f| %>

        <div class="form-group">
            <%= f.label :email, class: "control-label col-sm-2" %>
            <div class="col-sm-10">
                <%= f.email_field :email ,class: "form-control", rows: 10, placeholder: "email" %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :password, class: "control-label col-sm-2" %>
            <div class="col-sm-10">
                <%= f.password_field :password ,class: "form-control", rows: 10, placeholder: "Password" %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10" >
                <%= f.submit 'Login', class: "btn btn-success" %>
            
                <%= link_to "SignUp", signup_path, class: "btn btn-primary"%>
            </div>
        </div>

        <% end %>
    </div>
</div>